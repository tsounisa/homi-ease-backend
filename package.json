{
  "name": "homiease-api",
  "version": "1.0.0",
  "description": "Smart Home REST API",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles",
    "test:coverage": "npm run test -- --coverage"
  },
  
  "jest": {
    "testEnvironment": "node",
    
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/app.js",
      "!**/node_modules/**"
    ],
    

    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {} 
  },
  "keywords": [
    "smart-home",
    "rest-api",
    "express",
    "mongoose"
  ],
  "author": "HomiEase",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.0",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.0.0"

  }
}
