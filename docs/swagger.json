{
  "openapi": "3.0.0",
  "info": {
    "title": "Smart Home REST API",
    "version": "1.0.0",
    "description": "API for managing Houses, Rooms, and Smart Devices. Examples match 'mockData.js' for easy testing."
  },
  "servers": [
    {
      "url": "/api/v1",
      "description": "API Server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "House": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "house-1" },
          "name": { "type": "string", "example": "Demo User's Home" },
          "userId": { "type": "string", "description": "Foreign Key: Owner of the house", "example": "user-1" }
        }
      },
      "Room": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "room-1" },
          "name": { "type": "string", "example": "Living Room" },
          "houseId": { "type": "string", "description": "Foreign Key: House this room belongs to", "example": "house-1" }
        }
      },
      "Device": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "device-1" },
          "name": { "type": "string", "example": "Living Room Lamp" },
          "type": { "type": "string", "enum": ["switch", "sensor", "thermostat"], "example": "switch" },
          "status": { "type": "string", "example": "ON" },
          "roomId": { "type": "string", "description": "Foreign Key: Room this device belongs to", "example": "room-1" }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register a new account",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "New User" },
                  "email": { "type": "string", "format": "email", "example": "newuser@test.com" },
                  "password": { "type": "string", "format": "password", "minLength": 8, "example": "password123" }
                },
                "required": ["name", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login to account",
        "tags": ["Auth"],
        "description": "Use the credentials from mockData.js for instant access.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email", "example": "user@example.com" },
                  "password": { "type": "string", "format": "password", "example": "password123" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "message": { "type": "string", "example": "Login successful" },
                    "data": {
                      "type": "object",
                      "description": "Payload containing the JWT and User info",
                      "properties": {
                        "token": { 
                          "type": "string", 
                          "description": "JWT Bearer Token",
                          "example": "eyJhbGciOiJIUzI1Ni..." 
                        },
                        "user": {
                          "type": "object",
                          "properties": {
                            "_id": { "type": "string", "example": "user-123" },
                            "name": { "type": "string", "example": "John Doe" },
                            "email": { "type": "string", "example": "john@example.com" }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/auth/me": {
      "get": {
        "summary": "Get current user profile",
        "description": "Validates the Bearer token and returns the current user's info. Used by Frontend AuthContext to persist sessions.",
        "tags": ["Auth"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "User profile retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string", "example": "user-1" },
                        "name": { "type": "string", "example": "Demo User" },
                        "email": { "type": "string", "example": "user@example.com" }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Not authorized (Invalid or missing token)"
          }
        }
      }
    },
    "/houses": {
      "get": {
        "summary": "Get user's houses",
        "tags": ["Houses"],
        "responses": {
          "200": {
            "description": "List of houses",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/House" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add a house",
        "tags": ["Houses"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "name": { "type": "string", "example": "My Vacation Home" } },
                "required": ["name"]
              }
            }
          }
        },
        "responses": { "201": { "description": "House created" } }
      }
    },
    "/houses/{houseId}": {
      "get": {
        "summary": "Get house details",
        "tags": ["Houses"],
        "parameters": [{ "name": "houseId", "in": "path", "required": true, "schema": { "type": "string", "example": "house-1" } }],
        "responses": { 
          "200": { 
            "description": "House details",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/House" } } }
          },
          "404": { "description": "House not found" }
        }
      },
      "put": {
        "summary": "Update house details",
        "tags": ["Houses"],
        "parameters": [{ "name": "houseId", "in": "path", "required": true, "schema": { "type": "string", "example": "house-1" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "name": { "type": "string", "example": "Renovated House Name" } }
              }
            }
          }
        },
        "responses": { "200": { "description": "House updated" } }
      },
      "delete": {
        "summary": "Remove a house",
        "tags": ["Houses"],
        "parameters": [{ "name": "houseId", "in": "path", "required": true, "schema": { "type": "string", "example": "house-1" } }],
        "responses": { "200": { "description": "House removed" } }
      }
    },
    "/houses/{houseId}/rooms": {
      "get": {
        "summary": "Get all rooms for a house",
        "tags": ["Rooms"],
        "parameters": [{ "name": "houseId", "in": "path", "required": true, "schema": { "type": "string", "example": "house-1" } }],
        "responses": { 
          "200": { 
            "description": "List of rooms retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Room" }
                }
              }
            }
          } 
        }
      },
      "post": {
        "summary": "Add a room to a house",
        "tags": ["Rooms"],
        "parameters": [{ "name": "houseId", "in": "path", "required": true, "schema": { "type": "string", "example": "house-1" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "name": { "type": "string", "example": "Guest Room" } },
                "required": ["name"]
              }
            }
          }
        },
        "responses": { "201": { "description": "Room added successfully" } }
      }
    },
    "/rooms/{roomId}": {
      "get": {
        "summary": "Get room details",
        "tags": ["Rooms"],
        "parameters": [{ "name": "roomId", "in": "path", "required": true, "schema": { "type": "string", "example": "room-1" } }],
        "responses": { 
            "200": { 
                "description": "Room details retrieved",
                "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Room" } } }
            } 
        }
      },
      "put": {
        "summary": "Update room details",
        "tags": ["Rooms"],
        "parameters": [{ "name": "roomId", "in": "path", "required": true, "schema": { "type": "string", "example": "room-1" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "name": { "type": "string", "example": "Master Bedroom" } }
              }
            }
          }
        },
        "responses": { "200": { "description": "Room updated successfully" } }
      },
      "delete": {
        "summary": "Remove a room",
        "tags": ["Rooms"],
        "parameters": [{ "name": "roomId", "in": "path", "required": true, "schema": { "type": "string", "example": "room-1" } }],
        "responses": { "200": { "description": "Room removed successfully" } }
      }
    },
    "/rooms/{roomId}/devices": {
      "get": {
        "summary": "Get all devices for a room",
        "tags": ["Devices"],
        "parameters": [{ "name": "roomId", "in": "path", "required": true, "schema": { "type": "string", "example": "room-1" } }],
        "responses": { 
            "200": { 
                "description": "List of devices retrieved",
                "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Device" } } } }
            } 
        }
      },
      "post": {
        "summary": "Add smart device to room",
        "tags": ["Devices"],
        "parameters": [{ "name": "roomId", "in": "path", "required": true, "schema": { "type": "string", "example": "room-1" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { 
                  "name": { "type": "string", "example": "Ceiling Light" },
                  "type": { "type": "string", "enum": ["switch", "sensor", "thermostat"], "example": "switch" }
                },
                "required": ["name", "type"]
              }
            }
          }
        },
        "responses": { "201": { "description": "Device added" } }
      }
    },
    "/devices/{deviceId}": {
      "get": {
        "summary": "Get smart device details",
        "tags": ["Devices"],
        "parameters": [{ "name": "deviceId", "in": "path", "required": true, "schema": { "type": "string", "example": "device-1" } }],
        "responses": { 
            "200": { 
                "description": "Device details retrieved",
                "content": {
                    "application/json": {
                        "schema": { "$ref": "#/components/schemas/Device" }
                    }
                }
            } 
        }
      },
      "delete": {
        "summary": "Remove smart device",
        "tags": ["Devices"],
        "parameters": [{ "name": "deviceId", "in": "path", "required": true, "schema": { "type": "string", "example": "device-1" } }],
        "responses": { "200": { "description": "Device removed" } }
      },
      "put": {
        "summary": "Update or Categorize a smart device",
        "tags": ["Devices"],
        "parameters": [{ "name": "deviceId", "in": "path", "required": true, "schema": { "type": "string", "example": "device-1" } }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { 
                  "name": { "type": "string", "example": "Reading Lamp" },
                  "type": { "type": "string", "enum": ["switch", "sensor", "thermostat"], "example": "switch" },
                  "status": { "type": "string", "example": "ON" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "Device updated" } }
      }
    }
  }
}