{
  "openapi": "3.0.0",
  "info": {
    "title": "Smart Home REST API",
    "version": "1.0.0",
    "description": "API for managing Houses, Rooms, and Smart Devices. Examples match 'mockData.js' for easy testing."
  },
  "servers": [
    {
      "url": "/api/v1",
      "description": "Backend API Server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "user-1" },
          "name": { "type": "string", "example": "Demo User" },
          "email": { "type": "string", "example": "user@example.com" },
          "houses": { "type": "array", "items": { "type": "string", "example": "house-1" } }
        }
      },
      "House": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "house-1" },
          "name": { "type": "string", "example": "Demo User's Home" },
          "userId": { "type": "string", "description": "Foreign Key: Owner of the house", "example": "user-1" }
        }
      },
      "Room": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "room-1" },
          "name": { "type": "string", "example": "Living Room" },
          "houseId": { "type": "string", "description": "Foreign Key: House this room belongs to", "example": "house-1" },
          "settings": {
            "type": "object",
            "properties": {
              "temperature": { "type": "number", "example": 21 },
              "lighting": { "type": "number", "example": 80 }
            }
          }
        }
      },
      "Device": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "device-1" },
          "name": { "type": "string", "example": "Living Room Lamp" },
          "type": { 
            "type": "string", 
            "enum": ["light", "thermostat", "security", "media", "other"], 
            "example": "light" 
          },
          "status": { 
            "type": "object", 
            "example": { "isOn": true, "brightness": 100 } 
          },
          "roomId": { "type": "string", "description": "Foreign Key: Room this device belongs to", "example": "room-1" }
        }
      },
      "Automation": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "auto-1" },
          "name": { "type": "string", "example": "Evening Light Routine" },
          "trigger": {
            "type": "object",
            "properties": {
              "type": { "type": "string", "enum": ["Time", "Sensor", "Manual"] },
              "value": { "type": "string", "example": "7:00 PM Daily" }
            }
          },
          "action": {
            "type": "object",
            "properties": {
              "deviceId": { "type": "string", "example": "device-1" },
              "command": { "type": "object", "example": { "isOn": true } }
            }
          }
        }
      },
      "Scenario": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "scene-1" },
          "name": { "type": "string", "example": "Morning Wake-Up" },
          "actions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "deviceId": { "type": "string", "example": "device-3" },
                "command": { "type": "object", "example": { "isOn": true } }
              }
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register a new account",
        "tags": ["Auth"],
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "New User" },
                  "email": { "type": "string", "format": "email", "example": "newuser@test.com" },
                  "password": { "type": "string", "format": "password", "minLength": 6, "example": "password123" }
                },
                "required": ["name", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "201": { 
            "description": "User registered successfully",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } }
          },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login to account",
        "tags": ["Auth"],
        "description": "Use the credentials from mockData.js for instant access.",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email", "example": "user@example.com" },
                  "password": { "type": "string", "format": "password", "example": "password123" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "message": { "type": "string", "example": "Login successful" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "token": { "type": "string", "example": "eyJhbGciOiJIUzI1Ni..." },
                        "user": {
                          "type": "object",
                          "properties": {
                            "_id": { "type": "string", "example": "user-1" },
                            "name": { "type": "string", "example": "Demo User" },
                            "email": { "type": "string", "example": "user@example.com" }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/auth/me": {
      "get": {
        "summary": "Get current user profile",
        "tags": ["Auth"],
        "responses": {
          "200": {
            "description": "User profile retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "data": {
                      "type": "object",
                      "properties": {
                        "_id": { "type": "string", "example": "user-1" },
                        "name": { "type": "string", "example": "Demo User" },
                        "email": { "type": "string", "example": "user@example.com" }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Not authorized" }
        }
      }
    },
    "/houses": {
      "get": {
        "summary": "Get user's houses",
        "tags": ["Houses"],
        "responses": {
          "200": {
            "description": "List of houses",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/House" } } } }
          },
          "401": { "description": "Unauthorized" }
        }
      },
      "post": {
        "summary": "Add a house",
        "tags": ["Houses"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "name": { "type": "string", "example": "My Vacation Home" } },
                "required": ["name"]
              }
            }
          }
        },
        "responses": { 
          "201": { 
            "description": "House created",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/House" } } }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/houses/{houseId}": {
      "get": {
        "summary": "Get house details",
        "tags": ["Houses"],
        "parameters": [{ "name": "houseId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { 
          "200": { "description": "House details", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/House" } } } },
          "401": { "description": "Unauthorized" },
          "404": { "description": "House not found" }
        }
      },
      "put": {
        "summary": "Update house details",
        "tags": ["Houses"],
        "parameters": [{ "name": "houseId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" } } } } }
        },
        "responses": { 
          "200": { "description": "House updated" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "House not found" }
        }
      },
      "delete": {
        "summary": "Remove a house",
        "tags": ["Houses"],
        "parameters": [{ "name": "houseId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { 
          "200": { "description": "House removed" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "House not found" }
        }
      }
    },
    "/houses/{houseId}/rooms": {
      "get": {
        "summary": "Get all rooms for a house",
        "tags": ["Rooms"],
        "parameters": [{ "name": "houseId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { 
          "200": { "description": "List of rooms", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Room" } } } } },
          "401": { "description": "Unauthorized" },
          "404": { "description": "House not found" }
        }
      },
      "post": {
        "summary": "Add a room to a house",
        "tags": ["Rooms"],
        "parameters": [{ "name": "houseId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "name": { "type": "string", "example": "Guest Room" } },
                "required": ["name"]
              }
            }
          }
        },
        "responses": { 
          "201": { 
            "description": "Room added",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Room" } } }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "House not found" }
        }
      }
    },
    "/rooms/{roomId}": {
      "get": {
        "summary": "Get room details",
        "tags": ["Rooms"],
        "parameters": [{ "name": "roomId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { 
            "200": { "description": "Room details", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Room" } } } },
            "401": { "description": "Unauthorized" },
            "404": { "description": "Room not found" }
        }
      },
      "put": {
        "summary": "Update room details",
        "tags": ["Rooms"],
        "parameters": [{ "name": "roomId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" } } } } }
        },
        "responses": { 
          "200": { "description": "Room updated" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Room not found" }
        }
      },
      "delete": {
        "summary": "Remove a room",
        "tags": ["Rooms"],
        "parameters": [{ "name": "roomId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { 
          "200": { "description": "Room removed" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Room not found" }
        }
      }
    },
    "/rooms/{roomId}/devices": {
      "get": {
        "summary": "Get all devices for a room",
        "tags": ["Devices"],
        "parameters": [{ "name": "roomId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { 
            "200": { "description": "List of devices", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Device" } } } } },
            "401": { "description": "Unauthorized" },
            "404": { "description": "Room not found" }
        }
      },
      "post": {
        "summary": "Add smart device to room",
        "tags": ["Devices"],
        "parameters": [{ "name": "roomId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { 
                  "name": { "type": "string", "example": "Ceiling Light" },
                  "type": { "type": "string", "enum": ["light", "thermostat", "security", "media", "other"], "example": "light" }
                },
                "required": ["name", "type"]
              }
            }
          }
        },
        "responses": { 
          "201": { 
            "description": "Device added",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Device" } } }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Room not found" }
        }
      }
    },
    "/devices/{deviceId}": {
      "get": {
        "summary": "Get smart device details",
        "tags": ["Devices"],
        "parameters": [{ "name": "deviceId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { 
            "200": { "description": "Device details", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Device" } } } },
            "401": { "description": "Unauthorized" },
            "404": { "description": "Device not found" }
        }
      },
      "delete": {
        "summary": "Remove smart device",
        "tags": ["Devices"],
        "parameters": [{ "name": "deviceId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { 
          "200": { "description": "Device removed" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Device not found" }
        }
      },
      "put": {
        "summary": "Update smart device",
        "tags": ["Devices"],
        "parameters": [{ "name": "deviceId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Device" } } }
        },
        "responses": { 
          "200": { "description": "Device updated" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Device not found" }
        }
      }
    },
    "/automations": {
      "get": {
        "summary": "Get user's automations",
        "tags": ["Automations"],
        "responses": {
          "200": {
            "description": "List of automations",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Automation" } } } }
          },
          "401": { "description": "Unauthorized" }
        }
      },
      "post": {
        "summary": "Create automation",
        "tags": ["Automations"],
        "requestBody": {
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Automation" } } }
        },
        "responses": { 
          "201": { 
            "description": "Automation created",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Automation" } } }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/automations/{automationId}": {
      "get": {
        "summary": "Get automation details",
        "tags": ["Automations"],
        "parameters": [{ "name": "automationId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { 
          "200": { "description": "Automation details", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Automation" } } } },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "summary": "Update automation",
        "tags": ["Automations"],
        "parameters": [{ "name": "automationId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Automation" } } }
        },
        "responses": { 
          "200": { "description": "Updated", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Automation" } } } },
          "404": { "description": "Not found" }
        }
      },
      "delete": {
        "summary": "Delete automation",
        "tags": ["Automations"],
        "parameters": [{ "name": "automationId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { 
          "200": { "description": "Deleted" },
          "404": { "description": "Not found" }
        }
      }
    },
    "/scenarios": {
      "get": {
        "summary": "Get user's scenarios",
        "tags": ["Scenarios"],
        "responses": {
          "200": {
            "description": "List of scenarios",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Scenario" } } } }
          },
          "401": { "description": "Unauthorized" }
        }
      },
      "post": {
        "summary": "Create scenario",
        "tags": ["Scenarios"],
        "requestBody": {
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Scenario" } } }
        },
        "responses": { 
          "201": { 
            "description": "Scenario created",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Scenario" } } }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/scenarios/{scenarioId}": {
      "get": {
        "summary": "Get scenario details",
        "tags": ["Scenarios"],
        "parameters": [{ "name": "scenarioId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { 
          "200": { "description": "Scenario details", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Scenario" } } } },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "summary": "Update scenario",
        "tags": ["Scenarios"],
        "parameters": [{ "name": "scenarioId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Scenario" } } }
        },
        "responses": { 
          "200": { "description": "Updated", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Scenario" } } } },
          "404": { "description": "Not found" }
        }
      },
      "delete": {
        "summary": "Delete scenario",
        "tags": ["Scenarios"],
        "parameters": [{ "name": "scenarioId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { 
          "200": { "description": "Deleted" },
          "404": { "description": "Not found" }
        }
      }
    }
  }
}